{
  "name": "next-prisma",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "services:up": "docker compose -f compose.yaml up -d",
    "services:stop": "docker compose -f compose.yaml stop",
    "services:down": "docker compose -f compose.yaml down",
    "prisma:studio": "dotenv -e .env.development -- npx prisma studio",
    "prisma:seed": "dotenv -e .env.development -- npx prisma db seed",
    "prisma:push": "dotenv -e .env.development -- npx prisma db push",
    "prisma:generate": "dotenv -e .env.development -- npx prisma generate",
    "prisma:migrate": "dotenv -e .env.development -- npx prisma migrate dev",
    "postinstall": "dotenv -e .env.development -- npx prisma generate && npx prisma migrate deploy"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "dependencies": {
    "@auth/prisma-adapter": "^2.7.4",
    "@prisma/client": "^6.1.0",
    "next": "15.1.3",
    "next-auth": "^4.24.11",
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "dotenv-cli": "^8.0.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "15.1.3",
    "postcss": "^8",
    "prisma": "^6.1.0",
    "tailwindcss": "^3.4.1"
  }
}
